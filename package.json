    "helmet": "4.6.0",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "mocha": "9.0.3",
    "nodemon": "2.0.12"
  }
